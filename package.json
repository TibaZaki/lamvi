{
  "name": "lamvi",
  "version": "2016.4.20",
  "description": "Neural language model visual inspector",
  "private": true,
  "scripts": {
    "clean": "node node_modules/rimraf/bin.js dist/",
    "prep": "typings install && node node_modules/mkdirp/bin/cmd.js dist && node node_modules/catw/bin/cmd.js -w false node_modules/jQuery/dist/jquery.min.js node_modules/bootstrap/dist/js/bootstrap.min.js node_modules/d3/d3.min.js -o dist/lib.js",
    "build-css": "node node_modules/catw/bin/cmd.js -w false node_modules/bootstrap/dist/css/bootstrap.min.css lamvi.css -o dist/bundle.css",
    "watch-css": "node node_modules/catw/bin/cmd.js node_modules/bootstrap/dist/css/bootstrap.min.css lamvi.css -o dist/bundle.css",
    "build-html": "node node_modules/catw/bin/cmd.js -w false index.html -o dist/index.html",
    "watch-html": "node node_modules/catw/bin/cmd.js index.html -o dist/index.html",
    "build-js": "browserify lamvi.ts -p [tsify] -v > dist/bundle.js",
    "watch-js": "watchify lamvi.ts -p [tsify] -v --debug -o dist/bundle.js",
    "build": "npm run prep && npm run build-js && npm run build-css && npm run build-html",
    "watch": "npm run prep & npm run watch-js & npm run watch-css & npm run watch-html",
    "serve": "http-server -a 127.0.0.1 dist/",
    "serve-watch": "http-server -a 127.0.0.1 dist/ & npm run watch"
  },
  "devDependencies": {
    "typescript": "^1.8.7",
    "typings": "^0.7.9",
    "tsify": "^0.14.1",
    "watchify": "^3.7.0",
    "http-server": "^0.9.0",
    "catw": "^1.0.1",
    "rimraf": "^2.5.2",
    "mkdirp": "^0.5.1",
    "bootstrap": "^3.3.6",
    "browserify": "^13.0.0",
    "jquery": "^1.12.3"
  },
  "dependencies": {
    "d3": "^3.5.16"
  }
}